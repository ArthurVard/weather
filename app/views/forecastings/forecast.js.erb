<% if @forecasting && @forecasting.data && @forecasting.data.any? %>

html = ["Address:  "+ "<%= @forecasting.name %>"]
html.push("Latitude: " +    "<%= @forecasting.data['latitude'] %>" )
html.push("Longitude: " +   "<%= @forecasting.data['longitude'] %>" )
html.push("timezone: "  +   "<%= @forecasting.data['timezone'] %>" )
html.push("Currently:")
html.push("  time: " +        "<%= @forecasting.data['currently']['time'] %>" )
html.push("  summary: " +     "<%= @forecasting.data['currently']['summary'] %>" )
html.push("	 icon: " +        "<%= @forecasting.data['currently']['icon'] %>" )
html.push("	 temperature: " + "<%= @forecasting.data['currently']['temperature'] %>" )
html.push("	 humidity: " +    "<%= @forecasting.data['currently']['humidity'] %>" )
html.push("	 windSpeed: " +   "<%= @forecasting.data['currently']['windSpeed'] %>" )
html.push("	 pressure: " +    "<%= @forecasting.data['currently']['pressure'] %>" )
html.push("	 ozone: " +       "<%= @forecasting.data['currently']['ozone'] %>" )

$('#forecast').html( html.join('\n'))
var skycons = new Skycons({"color": "<%=@forecasting.icon_color %>"});
    skycons.add("current_icon", "<%=@forecasting.current_icon%>");
	skycons.play()

$('#current_temp').html( '<%= @forecasting.current_temperatureC %>'+'<sup>ยบ</sup>C')

$('#geoname').html('<%= @forecasting.name %>')

$('#current_summary').html('<%= @forecasting.current_summary %>')

<% else %>
$('#response1').html('')
$('#forecast').html( 'could not find any forecast for given place,\nplease input postal code or use geoname sugestions.')
<% end %>


